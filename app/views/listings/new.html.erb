<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="well well-sm">
        <div class="form-horizontal">

          <%= form_for @listing, html: { multipart: true } do |f| %>

            <fieldset>
              <legend class="text-center header">Create a Listing</legend>

              <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                <div class="col-md-8">
                  <input id="fname" name="title" value="" type="text" placeholder="Listing Title" class="form-control">
                </div>
              </div>

              <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-address-book bigicon" aria-hidden="true"></i></span>
                <div class="col-md-8">
                  <input id="lname" name="street" value="" type="text" placeholder="Street Address" class="form-control">
                </div>
              </div>

              <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"></span>
                <div class="col-md-8">
                  <input id="" name="city" value="" type="text" placeholder="City" class="form-control">
                </div>
              </div>

              <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"></span>
                <div class="col-md-8">
                  <input id="" name="postcode" value="" type="integer" placeholder="Postcode" class="form-control">
                </div>
              </div>

              <div class="form-group bootstrap-iso">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-calendar bigicon" aria-hidden="true"></i></span>
                <div class="col-md-8">
                  <input id="" name="moving_date" value="" type="date" placeholder="Moving Date" class="form-control">
                </div>
              </div>

              <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-clock-o bigicon" aria-hidden="true"></i></span>
                <div class="col-md-8">
                  <input id="" name="moving_time" value="" type="time" placeholder="Moving Time" class="form-control">
                </div>
              </div>

              <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"></span>
                <div class="col-md-8">
                <input id="num_helpers_needed" name="num_helpers_needed" type="number" value="" class="form-control" placeholder="How many people do you need to help you?">
                </div>
              </div>

            <div class="form-group">
              <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-money bigicon" aria-hidden="true"></i></span>
              <div class="col-md-8">
                <input id="phone" name="price" value="" type="number" placeholder="Offer ($AUD)" class="form-control">
              </div>
            </div>

            <div class="form-group">
             <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-picture-o bigicon" aria-hidden="true"></i></span>

              <div class="col-md-8">
                <!-- <input id="phone" name="image" value="" type="text" placeholder="image url" class="form-control"> -->
                <p>
                  <%= f.file_field :image %>
                  <%= f.hidden_field :image_cache %>
                </p>
              </div>

            </div>

            <div class="form-group textarea">
              <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i>
              </span>
              <div class="col-md-8">
                <div>
                  <textarea class="form-control" id="message" name="message" placeholder="Enter a short description of your listing, make it fun!" rows="7"></textarea>
                </div>
              </div>
            </div>

          <% @tags.each do |tag| %>
            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-tags bigicon" aria-hidden="true"></i></span>
            <label for="tab">
              <%=tag.name %>
            </label>
            <input type="checkbox" name="tags[]" value="<%= tag.id %>">
            <% end %>

              <div class="form-group">
                <div class="col-md-12 text-center">
                  <button id="move-button" type="submit" class="btn btn-primary btn-lg">Submit</button>
                </div>
              </div>
            </fieldset>
          <% end %>

        </div><!--close form-->
      </div>
    </div>
  </div>
</div>
