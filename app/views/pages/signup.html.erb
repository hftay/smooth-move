 <div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <div class="form-horizontal" method="post">
									<!-- <%#= form_for @user, method:"post" do %> -->
                  <%= form_for @user, html: { multipart: true } do |f| %>

                    <fieldset>
                        <legend class="text-center header">Register New User</legend>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="fname" name="name" type="text" placeholder="First Name" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="lname" name="name" type="text" placeholder="Last Name" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-picture-o bigicon" aria-hidden="true"></i></span>
                            <div class="col-md-8">
                                <!-- <input id="image" name="image" type="text" placeholder="Avatar" class="form-control"> -->
                                <p>
                                  <%= f.file_field :image %>
                                  <%= f.hidden_field :image_cache %>

                                </p>


                            </div>
                        </div>

                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="email" name="email" type="text" placeholder="Email Address" class="form-control">
                            </div>
                        </div>


                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-key bigicon" aria-hidden="true"></i></span>
                            <div class="col-md-8">
                                <input id="phone" name="password" type="password" placeholder="Password" class="form-control">
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </div>
                        <% end %>
                    </fieldset>
                </div> <!-- /form -->
            </div>
        </div>
    </div> <!-- /row -->
</div><!-- /container -->
